<p id="notice"><%= notice %></p>

<h1>tweet投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to '詳細', tweet_path(tweet.id) %></td>
        <td><%= link_to '編集', edit_tweet_path(tweet.id) %></td>
        <td><%= link_to '削除', tweet_path(tweet.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
